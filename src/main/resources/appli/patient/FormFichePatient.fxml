<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" spacing="15" styleClass="form-container" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="appli.controller.patient.FormFichePatientController">

    <!-- Titre -->
    <Label styleClass="form-title" text="Ajouter une fiche patient" />

    <!-- Identité -->
    <VBox spacing="5">
        <Label styleClass="form-label" text="Nom" />
        <TextField fx:id="nomField" prefWidth="280" />
    </VBox>

    <VBox spacing="5">
        <Label styleClass="form-label" text="Prénom" />
        <TextField fx:id="prenomField" prefWidth="280" />
    </VBox>

    <!-- Contact -->
    <VBox spacing="5">
        <Label styleClass="form-label" text="Email" />
        <TextField fx:id="mailField" prefWidth="280" />
    </VBox>

    <VBox spacing="5">
        <Label styleClass="form-label" text="Téléphone" />
        <TextField fx:id="telField" prefWidth="280" />
    </VBox>

    <!-- Sécurité sociale -->
    <VBox spacing="5">
        <Label styleClass="form-label" text="Numéro de sécurité sociale" />
        <TextField fx:id="numSecuField" prefWidth="280" />
    </VBox>

    <!-- Adresse -->
    <VBox spacing="5">
        <Label styleClass="form-label" text="Rue" />
        <TextField fx:id="rueField" prefWidth="280" />
    </VBox>

    <HBox spacing="10">
        <VBox spacing="5">
            <Label styleClass="form-label" text="N°" />
            <TextField fx:id="numRueField" prefWidth="130" />
        </VBox>

        <VBox spacing="5">
            <Label styleClass="form-label" text="Code postal" />
            <TextField fx:id="cpField" prefWidth="130" />
        </VBox>
    </HBox>

    <VBox spacing="5">
        <Label styleClass="form-label" text="Ville" />
        <TextField fx:id="villeField" prefWidth="280" />
      <Text fx:id="formInfo" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" textAlignment="CENTER" visible="false" wrappingWidth="278.80340576171875" />
    </VBox>

    <!-- Bouton -->
    <Button onAction="#onValiderFiche" styleClass="primary-button" text="Valider la fiche" />

</VBox>
