<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="15" styleClass="form-container" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="appli.controller.medecin.OrdonnanceNewController">

    <!-- Titre -->
    <Label styleClass="form-title" text="Ajouter une ordonnance" />

    <!-- Dossier (non traitÃ©s uniquement) -->
    <VBox spacing="5">
        <Label styleClass="form-label" text="Dossier" />
        <ChoiceBox prefWidth="150.0" fx:id="refDossier" />
    </VBox>

    <!-- Date -->
    <VBox spacing="5">
        <Label styleClass="form-label" text="Date de l'ordonnance" />
        <DatePicker fx:id="dateOrdonnance"/>
    </VBox>

    <!-- Bouton -->
    <Button onAction="#onValiderFiche" styleClass="primary-button" text="Valider l'ordonnance" />

</VBox>
