<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>



<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="appli.controller.management.MedecinManagementController"
            prefWidth="900" prefHeight="600">

    <!-- Menu gauche -->
    <left>
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #2c3e50;">
            <Button text="Demande de stock" onAction="#onDemandeDeStock"/>
            <Button text="Hospitalisation" onAction="#onHospitalisation"/>
            <Button text="Ordonnance" onAction="#onOrdonnance"/>
        </VBox>
    </left>

    <!-- Zone centrale pour les sous-vues -->
    <center>
        <StackPane fx:id="contentPane"
                   style="-fx-background-color: #ecf0f1; -fx-padding: 15;">

            <TableView fx:id="tableauFichePatient" prefWidth="800" prefHeight="500">

            </TableView>
            <TableView fx:id="ordonnanceTableView" prefWidth="800" prefHeight="500">

            </TableView>
            <TableView fx:id="hospitalisationTableView" prefWidth="800" prefHeight="500">

            </TableView>

        </StackPane>
    </center>


    <!-- Bas : utilisateur connecté -->
    <bottom>
        <HBox style="-fx-padding: 10; -fx-background-color: #bdc3c7;">
            <Label text="Connecté : "/>
            <Label fx:id="userLabel" text="Invité"/>
        </HBox>
    </bottom>

</BorderPane>

